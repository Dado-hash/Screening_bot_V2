[flake8]
max-line-length = 100
max-complexity = 10
ignore = 
    E203,
    E501,
    W503,
    F401
exclude = 
    .git,
    __pycache__,
    venv,
    .venv,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .idea,
    .vscode,
    cache,
    logs
per-file-ignores =
    __init__.py:F401,F403
    setup.py:E501
